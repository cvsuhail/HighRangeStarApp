rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow purchase order PDFs to be uploaded and read under the required path
    match /purchaseOrders/{threadId}/{filename} {
      allow read: if true; // public read for now; tighten later if needed
      allow write: if request.auth != null
        && request.resource != null
        && request.resource.contentType == 'application/pdf';
    }

    // Allow other document types (delivery notes, invoices, etc.)
    match /documents/{threadId}/{filename} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource != null
        && (request.resource.contentType == 'application/pdf' || 
            request.resource.contentType == 'image/jpeg' || 
            request.resource.contentType == 'image/png');
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}



